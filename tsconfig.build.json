{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": false,
    "sourceMap": false,
    "module": "commonjs"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.*",
    "**/*.spec.*",
    "__tests__/**/*",
    "typescript/**/*",
    "dist/**/*",
    "lib/**/*"
  ]
}
